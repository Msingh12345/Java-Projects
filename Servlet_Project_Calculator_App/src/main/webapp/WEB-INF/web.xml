<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>
	<servlet>
		<servlet-name>Add</servlet-name>
		<servlet-class>com.jsp.servlet.calculator.AdditionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Add</servlet-name>
		<url-pattern>/add-numbers</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Minus</servlet-name>
		<servlet-class>com.jsp.servlet.calculator.SubstractServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Minus</servlet-name>
		<url-pattern>/substract-numbers</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>m</servlet-name>
		<servlet-class>com.jsp.servlet.calculator.MultiplictionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>m</servlet-name>
		<url-pattern>/m-numbers</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>d</servlet-name>
		<servlet-class>com.jsp.servlet.calculator.DivisionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>d</servlet-name>
		<url-pattern>/d-numbers</url-pattern>
	</servlet-mapping>
</web-app>
